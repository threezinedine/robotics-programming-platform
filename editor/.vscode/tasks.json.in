{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build editor",
            "type": "shell",
{% if PLATFORM == "Windows" %}
            "command": "python",
            "args": [
                "${workspaceFolder}/../config.py",
                "-p",
                "editor",
                "build"
            ],
{% else %}
            "command": "sudo",
            "args": [
                "python3",
                "${workspaceFolder}/../config.py",
                "-p",
                "editor",
                "build"
            ],
{% endif %}
            "options": {
                "cwd": "${workspaceFolder}/.."
            }
        }
    ]
}